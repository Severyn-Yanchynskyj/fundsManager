<UserControl x:Class="PL.AccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL" xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
             mc:Ignorable="d" Height="114" Width="330">
    <StackPanel Margin="0,10,0,0" VerticalAlignment="Top" Background="#FF2FC3CB" HorizontalAlignment="Center" Width="310" Height="104">
        <Grid Height="98" Width="315">
            <Label x:Name="AccountNameLabel"  Content="" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontSize="20" Width="120"/>
            <Label x:Name="AccountCostLabel"  Content="" HorizontalAlignment="Left" Margin="135,5,0,0" VerticalAlignment="Top" FontSize="20" Width="120"/>
            <Label x:Name="AccountCurrencyLabel"  Content="" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" FontSize="20" Width="120"/>
            <Label x:Name="AccountTypeLabel"  Content="" HorizontalAlignment="Left" Margin="130,51,0,0" VerticalAlignment="Top" FontSize="20" Width="120"/>
            <Button x:Name="AccountOptionsButton" Content="..." FontSize="20" Background="#FF2FC3CB" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" Width="45" Height="32" BorderBrush="{x:Null}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="AccountOptionsShare" Header="Share"  FontSize="10" Click="AccountOptionsShare_Click" />
                        <MenuItem x:Name="AccountOptionsDelete" Header="Delete"  FontSize="10" Click="AccountOptionsDelete_Click" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

        </Grid>
    </StackPanel>
</UserControl>
